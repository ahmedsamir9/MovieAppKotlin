<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/mainBackground</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Widget.Task1.listItem.Corner" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dimen8dp</item>
        <item name="cornerSizeTopRight">@dimen/dimen50dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen50dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen8dp</item>
    </style>
    <style name="listItem.Corner" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_dimen20dp</item>
        <item name="cornerSizeTopRight">@dimen/_dimen20dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_dimen20dp</item>
        <item name="cornerSizeBottomRight">@dimen/_dimen20dp</item>
    </style>
    <!--    Using Drawable as background instead-->
    <!--    <style name="Widget.Task1.bookmark.Corner" parent="Widget.MaterialComponents.CardView">-->
    <!--        <item name="cornerFamily">rounded</item>-->
    <!--        <item name="cornerSizeTopLeft">8dp</item>-->
    <!--        <item name="cornerSizeTopRight">0dp</item>-->
    <!--        <item name="cornerSizeBottomLeft">8dp</item>-->
    <!--        <item name="cornerSizeBottomRight">0dp</item>-->
    <!--    </style>-->

    <style name="Widget.Task1.DetailsToolbar.Corner" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dimen0dp</item>
        <item name="cornerSizeTopRight">@dimen/dimen0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen50dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen16dp</item>
    </style>

    <style name="Widget.Task1.MainToolbar.Corner" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dimen0dp</item>
        <item name="cornerSizeTopRight">@dimen/dimen0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen8dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen24dp</item>
    </style>

    <style name="Widget.Task1.MovieTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:padding">@dimen/dimen16dp</item>
    </style>


    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Widget.Task1.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/dimen2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Task1.ImageButton" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <dimen name="dimen20dp">20</dimen>
</resources>